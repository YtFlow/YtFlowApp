<Page
    x:Class="YtFlow.App.Pages.QrCodePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:YtFlow.App.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    mc:Ignorable="d"
    RequestedTheme="Dark">

    <Grid x:Name="grid">
        <Grid x:Name="ContentPanel">
            <!--  Perview  -->
            <CaptureElement x:Name="VideoCapture" Stretch="Uniform" />
            <!--  Tips  -->
            <Grid  Margin="30"
                HorizontalAlignment="Center"
                VerticalAlignment="Top">
                <Grid.Background>
                    <SolidColorBrush Opacity="0.5" Color="Black"/>
                </Grid.Background>
                <TextBlock
                        Margin="6"
                        Style="{ThemeResource SubtitleTextBlockStyle}"
                        x:Uid="Qr"/>
            </Grid>
            
        </Grid>
    </Grid>
    <Page.BottomAppBar>
        <CommandBar x:Name="commandbar" DefaultLabelPosition="Right" Background="{ThemeResource PinkBarBackground}">
            <AppBarButton
                Click="FromPictureButton_Click"
                Icon="OpenLocal"
                x:Uid="Qcb1"/>
        </CommandBar>
    </Page.BottomAppBar>
</Page>
